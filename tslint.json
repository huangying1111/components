{
  "extends": [
    "tslint-config-airbnb",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "object-literal-sort-keys": false,
    "semicolon": [true, "never"],
    "indent": [true, "spaces", 2],
    "quotemark": [true, "single", "jsx-double"],
    "variable-name": [false],
    "jsx-no-lambda": [false],
    "no-this-assignment": [false],
    "import-name": [false]
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts",
      "node_modules/**/*.js"
    ]
  }

}